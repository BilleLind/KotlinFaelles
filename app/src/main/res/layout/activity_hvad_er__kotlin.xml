<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HvadErKotlin">
    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="400dp"
        android:layout_height="100dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        app:srcCompat="@drawable/kotlinlogo" />


    <TextView
        android:id="@+id/hvadErKotlinTxt"
        android:layout_width="359dp"
        android:layout_height="257dp"
        android:layout_alignTop="@+id/imageView4"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="115dp"
        android:autoSizeTextType="uniform"
        android:text="Kotlin er et cross platform general purpose programming language. Som på mange måder bygger vider på Java."
        android:textAppearance="@style/TextAppearance.AppCompat.Body1" />

    <TextView
        android:id="@+id/txt2"
        android:layout_width="376dp"
        android:layout_height="225dp"
        android:autoSizeTextType="uniform"
        android:text="Sproget er udviklet af jetBrains og blev første gang udgivet i 2011 til mainstreamen. Hvilken platforme kan sproget bruges til. "
        android:textColor="#000000"
        android:layout_centerHorizontal="true"
        android:layout_above="@+id/hvaderkotlin"
        android:layout_marginBottom="18dp"
        />

    <Button
        android:id="@+id/hvaderkotlin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="18dp"
        android:text="Next"
        />

</RelativeLayout>